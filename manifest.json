{
  "manifest_version": 2,

  "name": "Night Mode",
  "description": "This extension allows the user no invert site colors for night using",
  "version": "0.0.1",

  "browser_action": {
    "default_icon": "assets/images/icon.png",
    "default_popup": "index.html",
    "default_title": "Turn on/off night mode"
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}
