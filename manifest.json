{
  "manifest_version": 2,

  "name": "Night Mode",
  "description": "This extension allows user to invert site colors for night using",
  "version": "0.0.1",

  "browser_action": {
    "default_icon": "assets/images/icon-48.png",
    "default_popup": "index.html",
    "default_title": "Turn on/off night mode"
  },
  "icons": {
    "16": "assets/images/icon-16.png",
    "48": "assets/images/icon-48.png",
    "128": "assets/images/icon-128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "webNavigation",
    "*://*/*"
  ],
  "background": { "scripts": ["app/app.js"] }
}
